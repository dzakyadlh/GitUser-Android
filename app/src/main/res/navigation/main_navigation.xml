<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/searchUserFragment">

    <fragment
        android:id="@+id/searchUserFragment"
        android:name="com.dzakyadlh.githubuser.ui.SearchUserFragment"
        android:label="SearchUserFragment">
        <action
            android:id="@+id/action_searchUserFragment_to_detailUserFragment"
            app:destination="@id/detailUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailUserFragment"
        android:name="com.dzakyadlh.githubuser.ui.DetailUserFragment"
        android:label="DetailUserFragment">
        <action
            android:id="@+id/action_detailUserFragment_to_searchUserFragment"
            app:destination="@id/searchUserFragment"
            app:popUpTo="@id/searchUserFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>